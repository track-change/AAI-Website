---
import BasicLayout from "../layouts/Layout.astro";
import "../scss/main.scss";
import CTADefault from "../components/CTA-Button.astro";
import SideTab from "../components/SideTab.astro";
import FrontCaption from "../components/FrontCaption.astro";

interface Props {
  title: string;
  bannerSrc: string;
}

const { title } = Astro.props;
const { bannerSrc } = Astro.props;
---

<BasicLayout title={title}>
  <main>
    <SideTab collection="Programs" />

    <div class="top">
      <h1 class="title">{title}</h1>
      <div class="banner">
        <img src={bannerSrc} alt="Banner image" />

        <CTADefault
          ctas={[
            {
              text: "Get tickets",
              href: "/tickets",
            },
            {
              text: "RSVP",
              href: "https://www.eventbrite.com/",
            },
            {
              text: "Download press kit",
              href: "/press.pdf",
            },
          ]}
        />
      </div>
      <FrontCaption />
      <slot />
    </div>
  </main>
</BasicLayout>

<style lang="scss" is:global>
  html {
    font-family: system-ui, sans-serif;
    background: var(--white);
    background-size: 224px;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  // Side Tab Area
  main {
    display: flex;
  }
  .top {
    flex: 1;
  }

  .banner,
  .body-copy,
  .front-caption {
    width: 100%;
    max-width: 800px;

    @media screen and (max-width: 64rem) {
      max-width: 40rem;
    }
    @media screen and (max-width: 48rem) {
      max-width: 30rem;
      margin: 0 16px;

    }

    @media screen and (max-width: 35.5rem) {
      background-color: red;
      width: calc(100% - 4.4rem);
      margin: 0 16px;

    }
    @media screen and (max-width: 24.375rem) {
      width: calc(100% - 32px);
      margin: 0 16px;
    }

    display: flex;
    flex-direction: column;
  }
  .title {
    margin: 40px;
    @media screen and (max-width: 64rem) {
      margin: 32px;
    }
    @media screen and (max-width: 48rem) {
      margin: 16px;
    }
    @media screen and (max-width: 24.375rem) {
      margin: 16px;
    }
  }

  .banner {
    margin: 6.25rem auto;
    gap: 1.25rem;

    @media screen and (max-width: 24.375rem) {
      margin: 2.5rem auto;
    }
  }

  .front-caption {
    margin: 6.25rem auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 100px 20px;

    ul > li:first-child {
      color: var(--darkGray);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
  }

  .body-copy {
    margin: 6.25rem auto;
    display: flex;
    flex-direction: column;
    gap: 2em 0;
  }
</style>
