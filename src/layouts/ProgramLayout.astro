---
import "../scss/main.scss";
import Meta from "../partials/Meta.astro";
import Header from "../partials/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  bannerSrc: string;
}

const { title } = Astro.props;
const { bannerSrc } = Astro.props;
---

<!DOCTYPE html>
<Fragment lang="en">
  <Meta title={title} />

  <body>
    <Header />
    <h1>{title}</h1>
    <div class="banner">
      <img src={bannerSrc} alt="Banner image" />

      <div class="CTA-wrapper">
        <button class="CTA-default">Get tickets</button>
        <button class="CTA-default">RSVP</button>
        <button class="CTA-default">Download press kit</button>
      </div>
    </div>
    <div class="front-caption">
      <ul class="caption">
        <li>{title}</li>
        <li>Exhibition, Explicit, Arts in Philadelphia, Social Practice</li>
      </ul>
      <ul class="caption">
        <li>Dates</li>
        <li>April 14–May 30, 2023</li>
      </ul>
      <ul class="caption">
        <li>Curator</li>
        <li>Aubrié Costello</li>
      </ul>
      <ul class="caption">
        <li>Artists</li>
        <li>Aura Rosenberg</li>
        <li>Jaishri Abichandani</li>
        <li>Lanica Angpak</li>
        <li>Elia Alba</li>
        <li>Mequitta Ahuja</li>
        <li>Elia Alba</li>
        <li>Aura Rosenberg</li>
      </ul>
    </div>
    <slot />
    <Footer />
  </body>
</Fragment>

<style lang="scss" is:global>
  html {
    font-family: system-ui, sans-serif;
    background: var(--white);
    background-size: 224px;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  .banner,
  main,
  .front-caption {
    margin: 40px auto;
    width: 100%;
    max-width: 800px;

    @media screen and (max-width: 1024px) {
      max-width: 640px;
    }

    @media screen and (max-width: 768px) {
      max-width: 480px;
    }
    @media screen and (max-width: 390px) {
      max-width: 240px;
    }

    display: flex;
    flex-direction: column;
    gap: 100px;
  }

  .front-caption {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 100px 20px;

    ul > li:first-child {
      color: var(--darkGray);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
  }

  main {
    display: flex;
    flex-direction: column;
    gap: 2em 0;
  }
</style>
