---
import Layout from "../layouts/Layout.astro";
import SectionLayout from "../layouts/SectionLayout.astro";
import SideTab from "../components/SideTab.astro";
import RentalSec from "../components/sections/RentalSec.astro";
---

<Layout title="About">
  <div data-top>
    <SideTab text="Venue" href="#" style="department" classes="is-major" />
    <article data-wrapper>
      <SectionLayout backGround="black" textColor="white" title="About section">
        <div class="title">
          <h2>Our Space</h2>
        </div>
      </SectionLayout>

      <RentalSec />
    </article>
  </div>
</Layout>
<style type="scss">
  [data-top] {
    display: flex;
  }
  [data-wrapper] {
    width: 100vw;
    min-height: 100vh;

    display: flex;
    flex-direction: column;
    position: sticky;
    top: 45px;
    left: 0;

    .list {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      white-space: nowrap;
      position: relative;
      width: 100%;

      .list-item {
        writing-mode: vertical-rl;
        text-orientation: mixed;
        width: 100%;
        box-shadow: -10px 0px 14px 0px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: flex-end;
        padding: 40px;
      }
    }
  }
</style>

