---
import Layout from "../layouts/Layout.astro";
const embedURL =
  "https://www.youtube.com/embed/live_stream?channel=asianartsphilly";
const pageTitle = "Livestream from AAI";
---

<Layout title={pageTitle}>
  <main>
    <h2>{pageTitle}</h2>
    <div class="video-container">
      <iframe src={embedURL} frameborder="0" allowfullscreen></iframe>
    </div>
  </main>
</Layout>
<style lang="scss" is:global>
  @keyframes dimmer {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  h2 {
    margin: var(--l-margin);
    &::before {
      content: "";
      width: 0.75em;
      height: 0.75em;
      display: inline-block;
      background-color: red;
      border-radius: 100%;
      margin-right: 12px;
      animation: dimmer 1000ms ease-in-out infinite forwards;
    }
  }
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio (height/width) */
    overflow: hidden;
    margin: var(--l-margin);

    iframe,
    .video-poster {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .video-poster {
      object-fit: cover;
      z-index: 1;
    }
  }
</style>
