---
import Layout from "../../layouts/Layout.astro";
import { getArtists } from "../../data/api";

const artists = await getArtists();
---

<Layout title="Artists">
  <h1>Artists</h1>
  <ul>
    {
      artists.map((artist) => (
        <li>
          <a href={`/artists/${artist.slug.current}`}>{artist.name}</a>
        </li>
      ))
    }
  </ul>
</Layout>
