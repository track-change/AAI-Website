---
import Layout from "../../layouts/Layout.astro";
import SideTab from "../../components/SideTab.astro";
import CurrentPrograms from "./current-upcoming.astro";
import PastPrograms from "./past.astro";
---

<Layout title="Programs">
  <div data-top>
    <SideTab
      text="Programs"
      href="/programs"
      style="department"
      classes="is-major"
    />
    <SideTab
      text="Current and Upcoming"
      style="subpage"
      shadow="none"
      classes="current-tab"
    />
    <article class="wrapper">
      <div class="left-col">
        <!-- <CurrentPrograms /> -->
      </div>
      <div class="right-col">
        <!-- <PastPrograms /> -->
      </div>
    </article>
    <SideTab
      text="Past seasons"
      style="subpage"
      shadow="right"
      classes="past-tab"
    />
  </div>
</Layout>

<style lang="scss" is:global>
  body {
    position: sticky;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    overflow-x: hidden;
  }

  [data-top] {
    position: relative;
    display: flex;
    flex-grow: 1;

    .hidden {
      height: 100vh;
    }

    .department,
    .subpage {
      flex-shrink: 0;
      position: sticky;
      top: 44px;
      cursor: pointer;
      z-index: 10;
    }
    .subpage {
      visibility: hidden;
      background-color: var(--white);
    }
    .is-shown {
      visibility: visible;
      animation: fadeIn 0.4s linear forwards;
    }

    .wrapper {
      width: 100%;
      position: relative;
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      min-height: fit-content;

      .left-col,
      .right-col {
        flex: 1;
        width: 100%;
        display: flex;
      }

      .right-col {
        position: absolute;
        top: 0;
        left: 70%;
        height: fit-content;
        box-shadow: -10px 0px 14px 0px rgba(0, 0, 0, 0.1);
        z-index: 9;
      }
    }
    .past {
      flex-grow: 1;
      overflow: auto;
    }
  }
</style>

