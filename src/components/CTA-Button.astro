---
interface CTA {
  title: string;
  url: string;
}

const { ctas = [] } = Astro.props;
---

<div class="CTA-wrapper">
  {
    ctas.map((cta: CTA) => (
      <a href={cta.url} class="CTA-default">
        {cta.title}
      </a>
    ))
  }
</div>

<style type="scss">
  .CTA-default {
    display: inline-flex;
    padding: 12px 24px;
    max-width: 400px;
    width: 100%;
    justify-content: center;
    align-items: center;
    text-align: center;
    text-transform: capitalize;

    border: 1px solid var(--black, #000);

    background-color: var(--white, #fff);

    margin: -1px 0 0 -1px;

    @media screen and (max-width: 1024px) {
      max-width: 320px;
    }
    @media screen and (max-width: 768px) {
      width: 50%;
    }
    @media screen and (max-width: 390px) {
      width: 100%;
      max-width: 100%;
    }
  }

  .CTA-wrapper {
    gap: -1px;

    @media screen and (max-width: 1024px) {
    }
    @media screen and (max-width: 768px) {
    }
    @media screen and (max-width: 390px) {
      display: block;
    }
  }
</style>
